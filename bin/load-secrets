#! /usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ..

if [[ -n `which blackbox_decrypt_all_files` ]];then
  echo "--- decrypting secrets"
  blackbox_decrypt_all_files
fi

echo "--- loading secrets into environment"  

set -o allexport
source .env
set +o allexport

popd # return to original dir
